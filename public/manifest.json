
{
  "manifest_version": 3,
  "name": "AI Summary for Blogs and Articles",
  "description": "Summarize articles using AI. Your API key is stored securely locally.",
  "author": "Paras Mehta",
  "version": "1.1",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_ui": {
    "page": "index.html#/options",
    "open_in_tab": true
  }
}